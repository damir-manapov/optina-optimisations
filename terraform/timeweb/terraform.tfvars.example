# Timeweb Cloud API Token
# Set via environment variable: export TWC_TOKEN="your-api-token"
# Get token from: https://timeweb.cloud/my/api-keys

# Environment name for resource naming
environment_name = "optuna"

# Timeweb Cloud location
# Options: ru-1, ru-2, pl-1, kz-1
location = "ru-1"

# VM Configuration
cpu_count    = 16
ram_gb       = 16
disk_size_gb = 200

# Disk type
# Options: nvme, ssd, hdd
disk_type = "nvme"

# SSH key path
ssh_public_key_path = "~/.ssh/id_ed25519.pub"

# MinIO Cluster (Optional)
# Uncomment to deploy a MinIO cluster with erasure coding
# minio_enabled         = true
# minio_root_password   = "minioadmin123"  # Must match warp benchmark credentials
# minio_node_count      = 2    # Number of nodes (2, 3, 4, 6)
# minio_node_cpu        = 4    # vCPU per node
# minio_node_ram_gb     = 16   # RAM per node
# minio_drives_per_node = 2    # Drives per node (2, 3, 4)
# minio_drive_size_gb   = 100  # Size per drive
# minio_drive_type      = "nvme"  # nvme, ssd, or hdd
